{% extends 'layout.twig' %}

{% block body %} 
<h2 class="page-header">{{title}}</h2>
  {% if errors %}
      {% for error in errors %}
        <div class="alert alert-danger">{{ error.msg }}</div>
      {% endfor %}
  
  {% endif %}
                
  <form method="post" action="/viewCategory">
 
<div class="container">
  <h2>Documents</h2>
  <table class="table">
  
    <tbody>
     {% if documentView %}
        {% for document in categories %}
        <tr class="success">
          <td> {{document.local.category}}</td>
          <td width="50">  <a href="/documentUpdate?id={{document._id}}"><button type="submit" class="btn btn-default">Edit</button></a></td>
          <td width="50">  <a href="/documentDelete?id={{document._id}}"><button type="submit" class="btn btn-default">Delete</button></a></td>

     </tr>
        {% endfor %}
    {% endif %}



    </tbody>
  </table>
 </div> 
 {% endblock body %}